<div class = "main">

  <div class = "header">
    <div class = "top_btn">
      <%= link_to "TOPページ", shuwa_index_path, class: :top_white_btn %>
    </div>
  </div>

  <div class = "video">
    <video class = "video_view" src="<%= rails_blob_path(@question.video) %>" type="video/mp4" controls></video>
  </div>

  <div class = "hints">
    <div class = "hint_title">
      ヒント
    </div>
    <div class = hint>
      <%= @question.hint %>
    </div>
  </div>

  <div class = "answers_list">
    <% array = [(link_to "■ " + @question.correct, questions_path, class: :answer_a), (link_to "■ " + @question.wrong_2, shuwa_index_path, class: :answer_b),
    (link_to "■ " + @question.wrong_1, shuwa_index_path, class: :answer_c), (link_to "■ " + @question.wrong_3, shuwa_index_path, class: :answer_d)] %>
    <% array.shuffle! %>
    <div class = "answers" >
      <div class = "left" >
        <%= array[0] %>
        <%= array[1] %>
      </div>
      <div class = "right" >
        <%= array[2] %>
        <%= array[3] %>
      </div>
    </div>
  </div>
</div>

<%= link_to '編集', edit_question_path(@question.id), method: :get %>